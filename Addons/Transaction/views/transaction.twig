<div class="table-responsive">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Description</th>
                <th class="text-right">Credit</th>
                <th class="text-right">Debit</th>
            </tr>
            <tr>
                <th colspan="3">Latest 5 transactions.</th>
            </tr>
        </thead>

        <tbody>
            {% if transactions|length > 0 %}
                {% for transaction in transactions %}
                    <tr>
                        <td>{{ transaction.description }}</td>
                        <td class="text-right">{{ transaction.credit|number_format(2) }}</td>
                        <td class="text-right">{{ transaction.debit|number_format(2) }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            <tr>
                <th colspan="3">Over All Total</th>
            </tr> 
            <tr>
                <td>Total&nbsp;</td>
                <td class="text-right">{{ total_credit|number_format(2) }}</td>
                <td class="text-right">{{ total_debit|number_format(2) }}</td>
            </tr> 
        </tbody>
    </table>
</div>