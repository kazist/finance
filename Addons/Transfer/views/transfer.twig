<div class="table-responsive">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>
            <tr>
                <th colspan="3">Latest 5 Transfer.</th>
            </tr>
        </thead>

        <tbody>
            {% if transfers|length > 0 %}
                {% for transfer in transfers %}
                    <tr>
                        <td>{{ transfer.description|default('-') }}</td>
                        <td class="text-right">{{ transfer.amount|number_format(2) }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            <tr>
                <th colspan="3">Over All Total</th>
            </tr> 
            <tr>
                <td>Total&nbsp;</td>
                <td class="text-right">{{ total_transfers|number_format(2) }}</td>
            </tr> 
        </tbody>
    </table>
</div>